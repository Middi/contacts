<!DOCTYPE html>
<html lang="en">

<head>
    <title>Contacts</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Ionicons CSS -->
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">

    <!-- Flag-icon CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/2.8.0/css/flag-icon.css" rel="stylesheet">

    <!-- Local CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <main>

        <header>
            <div class="container-nav">
                <nav>

                    <!-- Search Button -->
                    <div class="nav-left">
                        <div id="search">
                            <a href="#"><i class="ion-ios-search i-large"></i></a>
                        </div>
                    </div>

                    <!-- Logo -->
                    <div class="logo">
                        <a href="/"><h1>Contacts</h1></a>
                    </div>
                    
                    <!-- Add Contact -->
                    <div class="nav-right">
                        <div id="add">
                            <a href="#"><i class="ion-ios-plus-outline i-large"></i></a>
                        </div>
                    </div>

                </nav>
            </div>
        </header>

            <!-- Edit Form -->
            <section id="edit-bar">
                <div class="edit-avatar">
                    <img src="<%= contactUser.avatar %>">
                </div>
                
                <form id="add-form" action="/edit/<%= contactUser._id %>" method="POST">
                        <input class="first-name" type="text" name="firstName" value="<%= contactUser.firstName %>" placeholder="First Name">
                        <input class="last-name" type="text" name="lastName" value="<%= contactUser.lastName %>" placeholder="Last Name">
                        <input class="number" type="tel" name="number" value="<%= contactUser.number %>" placeholder="Number">
                        <input class="country" type="text" name="country" value="<%= contactUser.country %>" placeholder="Country">

                        <button>Submit</button>
                </form>

                <!-- Cancel Button -->
                <div class="cancel">
                    <a href="/">Cancel</a>
                </div>

            </section>

            <!-- Search Input -->
            <div id="search-bar" class="hide">
                <input id="search-input" type="text" name="search" value="" placeholder="Search">
            </div>
